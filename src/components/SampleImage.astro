---
import { Picture } from 'astro:assets'
import localImage from '@/assets/images/sample.webp'
interface Props {
	alt: string
}
const { alt } = Astro.props
---

<div class="grid h-full w-full place-content-end">
	<Picture
		src={localImage}
		{alt}
		formats={['avif', 'webp']}
		widths={[450, 800, 1200, 1600]}
		loading="eager"
		sizes="(max-width: 1600px) 100vw, 1600px"
		pictureAttributes={{ class: 'w-full h-full' }}
	/>
</div>
